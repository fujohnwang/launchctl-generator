		</dependency>
		<!-- https://mvnrepository.com/artifact/com.dlsc.preferencesfx/preferencesfx-core -->
		<dependency>
			<groupId>com.dlsc.preferencesfx</groupId>
			<artifactId>preferencesfx-core</artifactId>
